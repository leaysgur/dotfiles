{
  "cleanupPeriodDays": 7,
  "permissions": {
    "defaultMode": "plan",
    "allow": [
      "Bash(ls:*)",
      "Bash(fd:*)",
      "Bash(find:*)",
      "Bash(rg:*)",
      "Bash(grep:*)",
      "Bash(sg:*)",
      "WebFetch(domain:developer.mozilla.org)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:docs.rs)",
      "mcp__claude__*"
    ],
    "deny": []
  },
  "env": {
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": true
  }
}
